@model ExamProject2017.Models.BusinessViewModels.EditViewModel
@{
    ViewData["Title"] = "Edit profile";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="business-edit-container">
                <h1>Edit your business information</h1>
                <form asp-controller="Business" asp-action="Edit" method="post">
                    <h5>Personal information</h5>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Firstname">Firstname</label>
                            <input asp-for="Firstname" type="text" class="form-control" placeholder="Firstname">
                            <span asp-validation-for="Firstname" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Lastname">Lastname</label>
                            <input asp-for="Lastname" type="text" class="form-control" placeholder="Lastname">
                            <span asp-validation-for="Lastname" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-5">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Phone">Phone</label>
                            <input asp-for="Phone" type="number" class="form-control" placeholder="Phone">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Position">Position</label>
                            <input asp-for="Position" type="text" class="form-control" placeholder="CEO, Employee etc.">
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                    </div>
                    <hr />
                    <h5>Business information</h5>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="BusinessName">Name</label>
                            <input asp-for="BusinessName" type="text" class="form-control" placeholder="Name of your business">
                            <span asp-validation-for="BusinessName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Address">Address</label>
                            <input asp-for="Address" type="text" class="form-control" placeholder="Address of your business">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-5">
                            <label asp-for="CVR">CVR</label>
                            <input asp-for="CVR" type="number" class="form-control" placeholder="CVR number">
                            <span asp-validation-for="CVR" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="BusinessType">Business type</label>
                            <input asp-for="BusinessType" type="text" class="form-control" placeholder="Agency, brand etc.   ">
                            <span asp-validation-for="BusinessType" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="Industry">Industry</label>
                            <input asp-for="Industry" type="text" class="form-control" placeholder="Food, Beauty etc.">
                            <span asp-validation-for="Industry" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Save information</button>
                </form>
            </div>
        </div>
    </div>
</div>