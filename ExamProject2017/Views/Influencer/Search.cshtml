@{
    ViewData["Title"] = "Find a influencer";
}

<div class="search-container">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="box">
                    <div class="form-group">
                        <input type="text" class="form-control" id="searchText" placeholder="Name, alias, kategory, platform">
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Facebook
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Instagram
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    YouTube
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Twitter
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Twitch
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Blog/website
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Snapchat
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Interests
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Fashion
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Beauty
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Entertainment
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Personal
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Gaming
                                </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="">
                                    Lifestyle
                                </label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <hr />
                            <p class="headline">Target agegroup</p>
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-primary">
                                    <input type="radio" name="options" id="option1" autocomplete="off"> 13-17
                                </label>
                            </div>
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-primary">
                                    <input type="radio" name="options" id="option2" autocomplete="off"> 18-24
                                </label>
                            </div>
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-primary">
                                    <input type="radio" name="options" id="option1" autocomplete="off"> 25-34
                                </label>
                            </div>
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-primary">
                                    <input type="radio" name="options" id="option1" autocomplete="off"> 35-44
                                </label>
                            </div>
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-primary">
                                    <input type="radio" name="options" id="option1" autocomplete="off"> 45-54
                                </label>
                            </div>
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-primary">
                                    <input type="radio" name="options" id="option1" autocomplete="off"> 55-64
                                </label>
                            </div>
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-primary">
                                    <input type="radio" name="options" id="option1" autocomplete="off"> 65+
                                </label>
                            </div>
                            @*<div class="btn-group" role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-info">13-17</button>
                                    <button type="button" class="btn btn-info">18-24</button>
                                    <button type="button" class="btn btn-info">25-34</button>
                                    <button type="button" class="btn btn-info">35-44</button>
                                    <button type="button" class="btn btn-info">45-54</button>
                                    <button type="button" class="btn btn-info">55-64</button>
                                    <button type="button" class="btn btn-info">65+</button>
                                </div>*@
                            <p class="headline">Min. followers</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                @for (int i = 0; i < 10; i++)
                {

                    <div class="influ-box">
                        <a asp-controller="Influencer" asp-action="Watch">
                            <div class="row">
                                <div class="col-3">
                                    <img class="influ-img" src="~/images/18033539_1428756403830054_6262741050218800995_n.jpg" />
                                </div>
                                <div class="col-9 noPadding">
                                    <div class="row">
                                        <div class="col-12">
                                            <span class="name">Christoffer Skov Jespersen</span>
                                        </div>
                                        <div class="col-6">
                                            <span class="text">7.5% engagement rate</span>
                                            <span class="text">100.000+ followers</span>
                                            <span class="text">4.5 out of 34 ratings</span>
                                        </div>
                                        <div class="col-6">
                                            <span class="text">Starting at 500$</span>
                                            <span class="text">Frederiksberg, Denmark</span>
                                            <span class="text">Instagram, YouTube</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                }

            </div>
        </div>
    </div>
</div>